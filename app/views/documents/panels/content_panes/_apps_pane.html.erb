<% if !Rails.env.production? %><!-- apps panel --><% end %>

<div class="apps_pane pane" id="apps_pane">
	<header>
  	<h3>Apps</h3>
  </header>
  
  <div class="content" id="apps-list">
    <div class="thumbnails"></div>
  </div>
  
  <div class="content hidden" id="app_details">
    <a href="#apps-list" id="app-details-back" class="back_button button">Back</a>
    <h4 class="app_title"></h4>
    <div class='single_app'>
      <img alt='' />
      <h5 class='app_version'></h5>
      <div class='actions'>
        <ul>
          <li>
            <a id='add_app_to_page_action' href=''>
              <%= t('.apps.detail_view.add_to_page') %>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>